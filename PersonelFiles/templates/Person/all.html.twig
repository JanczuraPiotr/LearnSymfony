{% extends 'base.html.twig' %}

{% block body %}

    <h1>Lista osób</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>PersonalId</th>
        </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.name }}</td>
                <td>{{ person.surname }}</td>
                <td>{{ person.personalId }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Brak osób w bazie.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
